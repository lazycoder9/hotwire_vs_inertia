<div class="glass-feedback-item">
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start mb-3 gap-2 sm:gap-0">
    <div class="flex items-center space-x-2 min-w-0 flex-1">
      <div class="w-7 h-7 sm:w-8 sm:h-8 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20 flex-shrink-0">
        <span class="text-white font-semibold text-xs">
          <%= feedback.name.first.upcase %>
        </span>
      </div>
      <div class="min-w-0 flex-1">
        <h3 class="text-xs sm:text-sm font-semibold text-white truncate"><%= feedback.name %></h3>
        <p class="text-white/70 text-xs truncate"><%= feedback.email %></p>
      </div>
    </div>
    <div class="text-left sm:text-right flex-shrink-0 self-start">
      <time
        class="text-white/60 text-xs whitespace-nowrap block"
        datetime="<%= feedback.created_at.iso8601 %>">
        <%= feedback.created_at.strftime("%b %-d, %Y") %>
      </time>
      <time
        class="text-white/50 text-xs whitespace-nowrap block mt-0.5"
        datetime="<%= feedback.created_at.iso8601 %>">
        <%= feedback.created_at.strftime("%l:%M %p") %>
      </time>
    </div>
  </div>
  
  <div class="bg-white/5 rounded-lg p-2 sm:p-3 border border-white/10">
    <p class="text-white/90 text-xs sm:text-sm leading-relaxed whitespace-pre-wrap break-words"><%= feedback.message %></p>
  </div>
</div>
