<div class="glass-card p-4 hover:border-white/25 transition">
  <div class="flex justify-between items-start">
    <div class="flex">
      <h2 class="text-md font-semibold text-white"><%= feedback.name %></h2>
      <span class="text-gray-400 text-sm ml-4"><i><%= feedback.email %></i></span>
    </div>
    <time
      class="text-gray-500 text-xs whitespace-nowrap"
      datetime="<%= feedback.created_at.iso8601 %>">
      <%= feedback.created_at.strftime("%b %-d, %Y %l:%M %p") %>
    </time>
  </div>
  <p class="mt-3 text-gray-200 whitespace-pre-wrap"><%= feedback.message %></p>
</div>
