<div class="glass-feedback-item">
  <div class="flex justify-between items-start mb-3">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 rounded-full bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20">
        <span class="text-white font-semibold text-xs">
          <%= feedback.name.first.upcase %>
        </span>
      </div>
      <div>
        <h3 class="text-sm font-semibold text-white"><%= feedback.name %></h3>
        <p class="text-white/70 text-xs"><%= feedback.email %></p>
      </div>
    </div>
    <div class="text-right">
      <time
        class="text-white/60 text-xs whitespace-nowrap block"
        datetime="<%= feedback.created_at.iso8601 %>">
        <%= feedback.created_at.strftime("%b %-d, %Y") %>
      </time>
      <time
        class="text-white/50 text-xs whitespace-nowrap block mt-0.5"
        datetime="<%= feedback.created_at.iso8601 %>">
        <%= feedback.created_at.strftime("%l:%M %p") %>
      </time>
    </div>
  </div>
  
  <div class="bg-white/5 rounded-lg p-3 border border-white/10">
    <p class="text-white/90 text-sm leading-relaxed whitespace-pre-wrap"><%= feedback.message %></p>
  </div>
</div>
