<div class="mb-4 sm:mb-6">
  <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-white mb-2">
    Hotwire Feedbacks
  </h1>
  <p class="text-white/70 text-sm sm:text-base">Share your thoughts with real-time updates</p>
</div>

<div class="grid grid-cols-1 xl:grid-cols-2 gap-4 sm:gap-6 min-h-[calc(100vh-12rem)] sm:min-h-[calc(100vh-10rem)]">
  <!-- Form Section -->
  <div class="space-y-4 order-2 xl:order-1">
    <%= render partial: "form", locals: { feedback: @feedback } %>
  </div>
  
  <!-- Feedbacks Section -->
  <div class="space-y-4 order-1 xl:order-2">
    <div class="glass-card p-4 sm:p-5">
      <h2 class="text-base sm:text-lg font-bold text-white mb-3 sm:mb-4 flex items-center flex-wrap gap-2">
        <span>Recent Feedback</span>
        <span class="px-2 py-1 text-xs bg-white/10 rounded-full border border-white/20">
          <%= @feedbacks.count %>
        </span>
      </h2>
      
      <div id="feedbacks" class="space-y-3 max-h-[40vh] sm:max-h-[50vh] xl:max-h-[calc(100vh-16rem)] overflow-y-auto pr-1 sm:pr-2">
        <% if @feedbacks.any? %>
          <%= render @feedbacks %>
        <% else %>
          <div class="text-center py-6 sm:py-8">
            <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto mb-3 rounded-full bg-white/10 flex items-center justify-center border border-white/20">
              <span class="text-base sm:text-lg text-white/60">â—¯</span>
            </div>
            <p class="text-white/60 text-sm sm:text-base">No feedback yet</p>
            <p class="text-white/40 text-xs sm:text-sm">Be the first to share your thoughts</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

