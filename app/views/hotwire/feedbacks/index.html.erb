<div class="mb-6">
  <h1 class="text-2xl font-bold text-white mb-2">
    Hotwire Feedbacks
  </h1>
  <p class="text-white/70 text-sm">Share your thoughts with real-time updates</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 h-[calc(100vh-10rem)]">
  <!-- Form Section -->
  <div class="space-y-4">
    <%= render partial: "form", locals: { feedback: @feedback } %>
  </div>
  
  <!-- Feedbacks Section -->
  <div class="space-y-4">
    <div class="glass-card p-5">
      <h2 class="text-lg font-bold text-white mb-4 flex items-center">
        Recent Feedback
        <span class="ml-2 px-2 py-1 text-xs bg-white/10 rounded-full border border-white/20">
          <%= @feedbacks.count %>
        </span>
      </h2>
      
      <div id="feedbacks" class="space-y-3 max-h-[calc(100vh-16rem)] overflow-y-auto pr-2">
        <% if @feedbacks.any? %>
          <%= render @feedbacks %>
        <% else %>
          <div class="text-center py-8">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-white/10 flex items-center justify-center border border-white/20">
              <span class="text-lg text-white/60">â—¯</span>
            </div>
            <p class="text-white/60 text-base">No feedback yet</p>
            <p class="text-white/40 text-xs">Be the first to share your thoughts</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

